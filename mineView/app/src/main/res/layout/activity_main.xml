<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<!--引用定义好的属性-->
    <com.example.mineview.MyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:text="自定义文本内容"
        app:textColor="#ff00ff"
        app:textSize="32"/>

    <!--自定义图片view-->
    <com.example.mineview.MyImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="90dp"
        app:iv_bg_color="#ff0000"
        app:tv_txt_color="#ffffff"
        app:tv_txt_size="30"
        android:src="@mipmap/jqdog"
        android:scaleType="centerCrop"/>

    <com.example.mineview.MyTitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/myTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:tv_title="首页"
        app:title_visible_share="true"/>

    <com.example.mineview.MyCircleView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/circle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="60dp"
        app:circle_color="#ff0000"
        app:circle_loading_size="16"/>


</androidx.constraintlayout.widget.ConstraintLayout>